<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/button_color_1"
    tools:context=".Payment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items"
                android:fontFamily="@font/lobster"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/order_item_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/grey"
                android:fontFamily="@font/lobster"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:fontFamily="@font/lobster"
                android:textColor="@color/grey"
                android:layout_marginLeft="30sp"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/order_item_quant"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:fontFamily="@font/lobster"
                android:textColor="@color/grey"
                android:textStyle="italic"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/grey"
                android:fontFamily="@font/lobster"
                android:layout_marginLeft="30sp"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/order_item_price"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/lobster"
                android:textStyle="italic"
                android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price"
            android:textColor="@color/grey"
            android:fontFamily="@font/lobster"
            android:textStyle="bold"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lobster"
            android:textColor="@color/grey"
            android:textStyle="italic"
            android:textSize="30sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/order_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/lobster"
        android:textAllCaps="false"
        android:textColor="@color/button_color_1"
        android:backgroundTint="@color/button_color_2"
        android:text="@string/make_payment"/>
    <Button
        android:id="@+id/temp_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobster"
        android:textAllCaps="false"
        android:textColor="@color/button_color_1"
        android:backgroundTint="@color/button_color_2"
        android:text="Book order for free"/>

</LinearLayout>