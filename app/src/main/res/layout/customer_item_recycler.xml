<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/button_color_1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="20sp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="@string/item_name"
                android:textColor="@color/grey"
                android:fontFamily="@font/lobster"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycler_item_name"
                android:layout_width="240sp"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:fontFamily="@font/lobster"
                android:textSize="25sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="Item Price : "
                android:textColor="@color/grey"
                android:fontFamily="@font/lobster"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycler_item_price"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/lobster"
                android:textStyle="italic" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/decrementor"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35sp"
                android:backgroundTint="@color/button_color_2"
                android:text="-"
                android:textSize="20sp"
                android:textColor="@color/button_color_1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_stock"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:text="0"
                android:textSize="25sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/lobster"
                android:textStyle="bold" />

            <Button
                android:id="@+id/incrementor"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:backgroundTint="@color/button_color_2"
                android:text="+"
                android:textColor="@color/button_color_1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lobster"
                android:drawableRight="@drawable/baseline_add_shopping_cart_24"
                android:layout_marginLeft="10sp"
                android:textOff="ADD"
                android:textOn="Added"
                android:text="ADD"
                android:layout_marginRight="20sp"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>